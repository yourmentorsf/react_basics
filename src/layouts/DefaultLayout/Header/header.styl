.header
  display flex
  justify-content space-between
  align-items center
  background url('@ast/img/header.jpg') no-repeat center center
  background-size cover
  background-attachment fixed
  position sticky
  top 0
  z-index 100

.nav
  display flex
  justify-content space-between
  align-items center
  width 100%

  &__list
    display flex

  &__link
    color #fff
    text-decoration none
    font-size 2rem
    transition all 0.3s ease

    &:hover
      color #ff0
      text-shadow 0 0 10px #ff0
      background-color #0005