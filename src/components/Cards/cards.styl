.card-block
  margin 0 auto
  text-align center
  padding 2rem

.cards
  display grid
  grid-template-columns repeat(auto-fill, minmax(25rem, 1fr))
  grid-row inherit
  gap 1rem

.card
  border 1px solid #ccc
  border-radius 0.5rem
  box-shadow 0 0 0.75rem #00000020
  padding 2rem 1rem
  display flex
  flex-flow column nowrap
  align-items center
  gap 1rem
  justify-content space-between
  min-width calc(20rem - 2rem)
  transition all 0.5s

  &:hover
    box-shadow 0 0 0.75rem #00000040

  &__heading
    display flex
    flex-flow column nowrap
    gap 1rem
    align-items center

    a
      text-decoration none
      color #335
      transition all 0.5s

      &:hover
        color #337
        text-shadow 0 0 0.1rem #007bff

  .tags
    display flex
    flex-flow row wrap
    gap 1rem

  h3
    font-size 2rem

  img
    height 80%
    transition all 0.5s
    z-index 1
    width 80%
    overflow hidden
    border-radius 0.5rem

    &:hover
      transform scale(1.05)

.btn
  padding 1rem
  border-radius 0.5rem
  border 1px solid #ccc
  background-color #007bff
  color #f4f4f4
  font-weight 500
  text-decoration none
  transition all 0.5s

  &:hover
    background-color #056b 3
    box-shadow 0 0 0.75rem rgba(0, 0, 0, 0.5)
